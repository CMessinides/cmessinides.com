mixin heading(level=1)
	case level
		when 1
			h1&attributes(attributes)
				block
		when 2
			h2&attributes(attributes)
				block
		when 3
			h3&attributes(attributes)
				block
		when 4
			h4&attributes(attributes)
				block
		when 5
			h5&attributes(attributes)
				block
		when 6
			h6&attributes(attributes)
				block
		default
			block
	